{
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.associations": {
        "optional": "cpp",
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "ranges": "cpp"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/out/build/devcontainer/compile_commands.json",
    "cmake.useCMakePresets": "auto",
    "cmake.configureOnOpen": true,
    "protoc": {
        "compile_on_save": true,
        "options": [
            "--proto_path=${workspaceRoot}/runners",
            "--cpp_out=${workspaceRoot}/runners"
        ]
    },
    "cSpell.words": [
        "buildsystems",
        "Cava",
        "cavathor",
        "Codespace",
        "cpptools",
        "cschleiden",
        "devcontainer",
        "devescalus",
        "elagil",
        "gersemi",
        "hiredis",
        "hykin",
        "instdir",
        "jeppeandersen",
        "lukka",
        "mutantdino",
        "proto3",
        "protoc",
        "resourcemonitor",
        "sonarlint",
        "sonarsource",
        "surajbarkale",
        "vcpkg",
        "VCPKG"
    ]
}